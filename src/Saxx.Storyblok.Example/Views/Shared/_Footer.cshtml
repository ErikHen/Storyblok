@using System.Globalization
@using Saxx.Storyblok

@{
    var model = Model as StoryblokStory;
}

@if (model != null)
{
    <footer class="container">
        Page published at @Model.PublishedAt, loaded @((DateTime.UtcNow - Model.LoadedAt).TotalSeconds.ToString("N0"))s ago.<br />
        UI Culture: @CultureInfo.CurrentUICulture
    </footer>
}
else
{
    <footer class="container"></footer>
}